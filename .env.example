# SPICE HARVESTER Environment Configuration
# Copy this file to .env and adjust values as needed

# Environment
ENVIRONMENT=development

# TerminusDB Configuration
TERMINUSDB_ADMIN_PASS=admin123
TERMINUSDB_SERVER_NAME=SpiceTerminusDB
TERMINUS_SERVER_URL=http://terminusdb:6363
TERMINUS_USER=admin
TERMINUS_ACCOUNT=admin
TERMINUS_KEY=admin123

# PostgreSQL Configuration (for Outbox Pattern)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=spiceadmin
POSTGRES_PASSWORD=spicepass123
POSTGRES_DB=spicedb

# Kafka Configuration
KAFKA_HOST=kafka
KAFKA_PORT=29092
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Service URLs
OMS_BASE_URL=http://oms:8000
BFF_BASE_URL=http://bff:8002
FUNNEL_BASE_URL=http://funnel:8003

# Message Relay Configuration
MESSAGE_RELAY_BATCH_SIZE=100
MESSAGE_RELAY_POLL_INTERVAL=5

# Logging
LOG_LEVEL=INFO

# HTTPS/SSL Configuration
USE_HTTPS=false
VERIFY_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:5173"]